{% extends "app/base.twig" %}
{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 text-center">
                    <h1 class="m-0 text-dark">{{ lang('LBL_EDIT_POST') }}</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <form id="form-record-edit" class="form-horizontal" method="post" action="{{ base_url }}/admin/post/edit">
                <input type="hidden" name="id" value="{{ record.id }}"/>
                <input type="hidden" name="seo_id" value="{{ record.seo.id }}"/>
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">{{ lang('LBL_GENERAL_INFO') }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.title.label) }} (*)</label>
                                    <div class="col-sm-8">
                                        {{ form_field("text","title","required",'',record.title)|raw }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.slug.label) }}</label>
                                    <div class="col-sm-8">
                                        {{ form_field("slug","slug",'','',record.slug)|raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.for_lang.label) }}</label>
                                    <div class="col-sm-8">
                                        {{ form_field("multienum","for_lang","",config.languages,record.for_lang)|raw }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang('LBL_CATEGORY') }}</label>
                                    <div class="col-sm-8">
                                        {{ form_field("multienum","category_id","",category.options,record.category)|raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.status.label) }}</label>
                                    <div class="col-sm-8">
                                        {{ form_field("enum","status","",lang.app[db_def.post.status.options],record.status)|raw }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.publish_at.label) }}</label>
                                    <div class="col-sm-8">
                                        {{ form_field("date","publish_at",'','',record.publish_at)|raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.short_description.label) }}</label>
                                    <div class="col-sm-10">
                                        {{ form_field("textarea","short_description",'','',record.short_description)|raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.description.label) }}</label>
                                    <div class="col-sm-10">
                                        {{ form_field('editor','description','','',record.description)|raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">{{ lang('LBL_SEO') }}</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.seo.title.label) }}</label>
                                    <div class="col-sm-8">
                                        {{ form_field("text","seo_title",'','',record.seo.title)|raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.seo.description.label) }}</label>
                                    <div class="col-sm-8">
                                        {{ form_field("textarea","seo_description",'','',record.seo.description)|raw }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group row">
                                    <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.seo.keyword.label) }}</label>
                                    <div class="col-sm-8">
                                        {{ form_field("textarea","seo_keyword",'','',record.seo.keyword)|raw }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body buton-action-record">
                        <div class="row">
                            <div class="col-sm-12 text-center">
                                <button type="button" onclick="formOnSubmit()" class="btn btn-info">{{ lang('SAVE') }}</button>
                                <a href="{{ base_url }}/admin/post" class="btn btn-outline-danger">{{ lang('LBL_CANCEL') }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
{% block extra_footer %}
    <script>
        function formOnSubmit() {
            $('.datetimepicker,.datepicker').each(function () {
                var d = $(this).val().split(' ');
                d[0] = $(this).val().split('/');
                var f = config.date_format_js.split('/');
                var s = d[0][f.indexOf('YYYY')] + '-' + d[0][f.indexOf('MM')] + '-' + d[0][f.indexOf('DD')] + (d.length === 2 ? ' ' + d[1] : '');
                $(this).val(s);
            });
            $('#form-record-edit').submit();
        }
    </script>
{% endblock %}