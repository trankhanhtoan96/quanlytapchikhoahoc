{% extends "app/base.twig" %}
{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 text-center">
                    <h1 class="m-0 text-dark">{{ lang('LBL_POST') }}</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body buton-action-record">
                    <div class="row">
                        <div class="col-sm-12 text-left">
                            <a href="{{ base_url }}/admin/post/edit/{{ record.id }}" class="btn btn-info">
                                <i class="far fa-pencil"></i> {{ lang('LBL_EDIT') }}
                            </a>
                            <a href="{{ base_url }}/admin/post/create" class="btn btn-outline-info">
                                <i class="far fa-plus"></i> {{ lang('LBL_CREATE') }}
                            </a>
                            <a href="{{ base_url }}/admin/post" class="btn btn-outline-info">
                                <i class="far fa-tasks"></i> {{ lang('LBL_LIST') }}
                            </a>
                            <a href="{{ base_url }}/admin/post/delete/{{ record.id }}" class="btn btn-outline-danger">
                                <i class="far fa-trash"></i> {{ lang('LBL_DELETE') }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">{{ lang('LBL_POST') }}</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.title.label) }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {{ view_field('text','title',record.title)|raw }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.category.slug.label) }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {{ view_field('text','slug',record.slug)|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.for_lang.label) }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {% for key in record.for_lang %}
                                        <label class="badge badge-info">{{ config.languages[key] }}</label>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang('LBL_CATEGORY') }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {% for l in record.category %}
                                        <a class="badge badge-info" href="{{ base_url }}/admin/category/detail/{{ l.id }}">{{ l.name }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.status.label) }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {{ lang(db_def.post.status.options)[record.status] }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.publish_at.label) }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {{ view_field('date','publish_at',record.publish_at)|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.short_description.label) }}</label>
                                <div class="col-sm-10 col-form-value">
                                    {{ view_field('text','short_description',record.short_description)|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label text-sm-left text-md-right">{{ lang(db_def.post.description.label) }}</label>
                                <div class="col-sm-10 col-form-value">
                                    <textarea name="description" class="ckeditor" readonly>{{ record.description|raw }}</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">{{ lang('LBL_SEO') }}</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.seo.title.label) }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {{ record.seo.title }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.seo.description.label) }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {{ record.seo.description }}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row">
                                <label class="col-sm-4 col-form-label text-sm-left text-md-right">{{ lang(db_def.seo.keyword.label) }}</label>
                                <div class="col-sm-8 col-form-value">
                                    {{ record.seo.keyword }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}