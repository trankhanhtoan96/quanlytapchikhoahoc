{% extends "app/base.twig" %}
{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12 text-center">
                    <h1 class="m-0 text-dark">{{ lang('LBL_POST') }}</h1>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-body buton-action-record">
                    <div class="row">
                        <div class="col-sm-12 text-left">
                            <a href="{{ base_url }}/admin/post/create" class="btn btn-info">
                                <i class="far fa-plus"></i> {{ lang('LBL_CREATE') }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">{{ lang('LBL_POST') }}</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-hover datatable">
                        <thead>
                        <tr>
                            <th class="text-center">{{ lang(db_def.post.title.label) }}</th>
                            <th class="text-center">{{ lang(db_def.post.for_lang.label) }}</th>
                            <th class="text-center">{{ lang('LBL_CATEGORY') }}</th>
                            <th class="text-center">{{ lang(db_def.post.status.label) }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for record in records %}
                            <tr>
                                <td><a href="{{ base_url }}/admin/post/detail/{{ record.id }}">{{ record.title }}</a></td>
                                <td>
                                    {% for l in record.for_lang %}
                                        <label class="badge badge-info">{{ config.languages[l] }}</label>
                                    {% endfor %}
                                </td>
                                <td>
                                    {% for l in record.category %}
                                        <a class="badge badge-info" href="{{ base_url }}/admin/category/detail/{{ l.id }}">{{ l.name }}</a>
                                    {% endfor %}
                                </td>
                                <td>{{ lang(db_def.post.status.options)[record.status] }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}